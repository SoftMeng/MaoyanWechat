/* pages/rooms/rooms.wxss */

.wrap {
  background-color: #f5f5f5;
}

.cinema {
  display: flex;
  flex-direction: column;
  padding: 25rpx;
  border-bottom: 1rpx solid #e4e4e4;
  background-color: #fff;
}

.cinema .name {
  font-size: 12pt;
  color: #202020;
}

.cinema .address {
  margin-top: 7rpx;
  font-size: 11pt;
  color: #979797;
}

.cinema .tel {
  margin-top: 3rpx;
  font-size: 10pt;
  color: #b9b5b5;
}

.film {
  background-color: #fff;
}

.film > .image {
  position: relative;
  width: 750rpx;
  height: 316rpx;
  background-color: #1f1814;
}

.film > .image image {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -91.5rpx;
  margin-top: -129rpx;
  width: 183rpx;
  height: 258rpx;
}

.film .desc {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.film .desc .name {
  font-size: 12pt;
  color: #000;
}

.film .desc .grade {
  font-size: 12pt;
  color: #fdad00;
}

.film .desc .time {
  font-size: 10pt;
  color: #a5a5a5;
}

.rooms {
  margin-top: 30rpx;
  background-color: #fff;
}

.rooms .item {
  display: flex;
  height: 140rpx;
  justify-content: space-between;
  width: 750rpx;
  box-sizing: border-box;
  padding: 15rpx;
  align-items: center;
  border-bottom: 1px solid #e4e4e4;
}

.rooms .item .time {
  font-size: 18pt;
  color: #000;
}

.rooms .item .room {
  font-size: 12pt;
  color: #8b8b8b;
  margin-left: 47rpx;
}

.rooms .item .price {
  font-size: 12pt;
  color: #da3b3b;
  margin-left: 44rpx;
}


.buyBtn {
    font-size: 8pt;
    width: 150rpx;
    height: 53rpx;
    background-color: transparent;
    color: #f03114;
    border: 2px solid #f03114;
    text-align: center;
    line-height: 53rpx;
    margin-right: 0;
}
